@page
@model Study.WebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}


<h1>登录</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-form-label">账号</label>
        <input type="text" class="form-control" asp-for="loginModel.UserName" />
        <span asp-validation-for="loginModel.UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label">密码</label>
        <input type="text" class="form-control" asp-for="loginModel.Password" />
        <span asp-validation-for="loginModel.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="登录" />
    </div>
</form>
