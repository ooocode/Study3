@page
@model Study.WebApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>注册</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>邮箱</label>
        <input asp-for="registModel.Email" class="form-control"/>
    </div>

    <div class="form-group">
        <label>密码</label>
        <input asp-for="registModel.Password" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary" value="注册"/>
</form>
