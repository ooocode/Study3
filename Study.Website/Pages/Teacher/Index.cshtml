@page
@model Study.Website.Pages.Teacher.IndexModel
@{
    ViewData["Title"] = "教师后台";
}



<div class="card mt-2">
    <div class="card-header border-0">
        <div class="d-flex justify-content-between">
            <h3 class="card-title">总览</h3>
            @*<a href="javascript:void(0);">View Report</a>*@
        </div>
    </div>
    <div class="card-body">


        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        @{
                            var couseCount = await CourseService
                                .GetCourses()
                                .CountAsync(e => e.UserId == Model.CurUserId);
                        }
                        <h3>@couseCount</h3>

                        <p>课程</p>
                    </div>
                    <div class="icon">
                        @*<ion-icon name="book-outline"></ion-icon>*@
                        <i class="fas fa-book"></i>
                        @*<i class="ion ion-"></i>*@
                    </div>
                    <a href="/Teacher/Course/CourseList" class="small-box-footer">查看更多<i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        @{
                            var classCount = await UserService.GetCurTeacherClassCountAsync();
                        }
                        <h3>@classCount</h3>

                        <p>班级</p>
                    </div>
                    <div class="icon">
                        @*<ion-icon name="book-outline"></ion-icon>*@
                        <i class="fas fa-user"></i>
                        @*<i class="ion ion-"></i>*@
                    </div>
                    <a href="/Teacher/Classes/List" class="small-box-footer">查看更多<i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

        

            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-primary">
                    <div class="inner">
                        @{ 
                            var userFriendsCount = await UserService.GetUserFriends(Model.CurUserId).CountAsync();
                        }
                        <h3>@userFriendsCount</h3>

                        <p>助教</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-friends"></i>
                    </div>
                    <a href="/Teacher/TeacherFriend" class="small-box-footer">查看更多<i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- ./col -->
            @*<div class="col-lg-3 col-6">
       
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>65</h3>

                        <p>Unique Visitors</p>
